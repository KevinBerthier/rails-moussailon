<div class="padded-md" style="background-image: linear-gradient(-225deg, rgba(0, 101, 168, 0.6) 0%, rgba(55, 101, 132, 0.4) 80%), url('<%= image_url "form-back.jpg" %>');">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3">
        <div class="background-form">
        <h2 class="txt-bold text-center">Mousaillon</h2>
          <%= simple_form_for @user, url: edit_profile_path, method: :patch do |f| %>
            <%= f.input :first_name %>
            <%= f.input :last_name %>
            <%= f.input :description %>
            <%= f.input :phone %>
            <%= f.input :photo, as: :attachinary %>
            <div class="text-center">
              <%= f.submit "submit", class: "btn btn-primary " %>
            </div>
          <% end %>
          <div class="text-center margin-top-sm">
            <%= link_to "Supprimer le compte" , edit_profile_path, method: :delete, :confirm => "Etes vous sÃ»r de vouloir supprimer votre compte?" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
