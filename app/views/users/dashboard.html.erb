  <div class="tab">
    <ul class="tabs">
      <li><a href="#">Mes bâteaux en location</a></li>
      <li><a href="#">Mes réservations d'autres bâteaux</a></li>
    </ul>

    <div class="tab_content padded-sides-sm">
      <div class="class tabs_item">
          <% @user.boats.all.each do |boat| %>
            <div class="card-white margin-top-sm">
            <% card_img_path = %>
              <% if boat.photos? %>
                <% cl_image_path boat.photos.first.path %>
              <% else %>
                <% image_path 'boat1.jpg' %>
              <% end %>

              <%= cl_image_tag card_img_path, height: 140, crop: :fill %>
              <p class="txt-bold"><%= boat.name %> </p>
              <p class="txt-light">Note moyenne</p>
              <p class="txt-light">Price : <%= boat.price %> €/j </p>
              <p class="txt-light">Gestion des réservations</p>
              <p class="card-white-edit txt-regular"><%= link_to "Editer votre bateau", edit_boat_path(boat) %></p>
            </div>
        <% end %>
      </div>

      <div class="class tabs_item">
        <p>test</p>
        <% if @user.bookings %>
          <% @user.bookings.all.each do |booking| %>
            <p><%= booking.date_check_in %> <%= booking.date_check_out %> </p>
            <p> Prix: <%= booking.total_price %> €</p>
          <% end %>
        <% else %>
          <p class="txt-light">Vous n'avez pas encore fait de réservation</p>
        <% end %>
      </div>
    </div>
</div>

