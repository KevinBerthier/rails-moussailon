<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "logo-brand.png" %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <%= link_to "Concept", '#', class: "navbar-wagon-item navbar-wagon-link upcase" %>

    <%= link_to "FAQ", '#', class: "navbar-wagon-item navbar-wagon-link upcase" %>

    <!-- Different navigation if login or not -->
    <% if user_signed_in? %>

      <!-- Profile picture and dropdown -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <% if current_user.photo? %>
            <%= cl_image_tag current_user.photo.path, width: 30, height: 30, crop: :fill, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <% else %>
            <%= image_tag "http://placehold.it/30x30", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <% end %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to dashboard_path do %>
                <i class="fa fa-user"></i> Dashboard
              <% end %>
            </li>
            <li>
              <%= link_to edit_profile_path do %>
                <i class="fa fa-pencil-square-o"></i> Edit profile
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>

    <% else %>

      <%= link_to "Signup", new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link upcase" %>
      <!-- Login text link -->
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link upcase" %>

    <% end %>

    <!-- Button (call-to-action) -->
    <%= link_to t(".top_call_to_action", default: "Enregistrez votre bateau"), new_boat_path, class: "navbar-wagon-item btn-blue btn" %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li>
          <%= link_to new_boat_path, class: "navbar-wagon-item navbar-wagon-link" do %>
          <i class="fa fa-ship"></i> <%= t(".top_call_to_action", default: "Enregistrez votre bateau") %>
          <% end %>
        </li>
        <% if user_signed_in? %>
          <li>
            <%= link_to dashboard_path, class: "navbar-wagon-item navbar-wagon-link" do %>
              <i class="fa fa-user"></i> Dashboard
            <% end %>
          </li>
          <li>
            <%= link_to '#', class: "navbar-wagon-item navbar-wagon-link" do %>
            <i class="fa fa-question"></i> FAQ
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete, class: "navbar-wagon-item navbar-wagon-link"  do %>
              <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
            <% end %>
          </li>
        <% else %>
          <li>
            <%= link_to '#', class: "navbar-wagon-item navbar-wagon-link" do %>
            <i class="fa fa-lightbulb-o"></i> Concept
            <% end %>
          </li>
          <li>
            <%= link_to '#', class: "navbar-wagon-item navbar-wagon-link" do %>
            <i class="fa fa-question"></i> FAQ
            <% end %>
          </li>
          <li>
            <%= link_to new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link" do %>
            <i class="fa fa-pencil-square-o"></i> Signup
            <% end %>
          </li>
          <li>
            <%= link_to new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" do %>
            <i class="fa fa-sign-in"></i> <%= t(".sign_in", default: "Login") %>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
