
<div class="row">
  <% @boats.each do |boat| %>
    <% card_img_path = %>
    <% if boat.photos? %>
    <% cl_image_path boat.photos.first.path, height: 300, width: 400, crop: :fill %>
    <% end %>

    <div class="col-xs-12 col-sm-4 padded">
      <%= link_to boat_path(boat) do %>
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
         url('<%= card_img_path %>')">
          <div class="card-category"><%= boat.price %> â‚¬</div>
          <div class="card-description">
            <h2><%= boat.name %></h2>
            <p><%= boat.city %></p>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>



