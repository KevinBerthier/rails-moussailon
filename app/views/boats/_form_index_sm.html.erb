<div class="form-group form-inline">
  <%= text_field_tag :city, params[:city], class: "form-control margin-form", placeholder: "Saint Tropez" %>

  <label for="checkin" class="sr-only">Checkin</label>
  <input class="form-control margin-form" type="date" value="<%= params[:date_check_in] %>" id="checkin" name="date_check_in">

  <label for="checkout" class="sr-only">Checkout</label>
  <input class="form-control" type="date" value="<%= params[:date_check_out] %>" id="checkout" name="date_check_out">
</div>

<div class="form-group form-inline">
  <%= select_tag :gender, options_for_select(Boat::GENDER, selected: params[:gender]), class: "form-control margin-form" %>

  <%= text_field_tag :capacity, params[:capacity], class: "form-control margin-form", placeholder: "nb personnes" %>

  <button type="submit" class="btn btn-default btn-block">Affiner la recherche</button>
</div>
