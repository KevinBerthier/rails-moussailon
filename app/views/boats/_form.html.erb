<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <h2 class="txt-bold">Entrez les informations compl√©mentaires sur votre navire</h2>
      <%= simple_form_for @boat do |f| %>
      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :city %>
      <%= f.input :capacity %>
      <%= f.input :model %>
