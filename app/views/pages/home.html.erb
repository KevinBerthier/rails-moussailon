<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_url "home-background.jpg" %>');">
  <div class="banner-content">
    <h1 class="txt-blue">MOUSSAILLON</h1>
    <h2>Louez votre bateau</h2>
    <h2>& larguez les amarres</h2>

    <form action="/boats" method="get" class="form-inline text-center padded">
      <div class="form-group">
        <label class="sr-only" for="inlineFormInput">City</label>
        <input class="form-control" type="text" id="inlineFormInput" placeholder="Saint Tropez" name="city">
      </div>

      <div class="form-group">
        <label for="checkin" class="sr-only">Checkin</label>
        <input class="form-control" type="date" id="checkin" name="date_check_in"value="<%= Date.today %>">
      </div>

      <div class="form-group">
        <label for="checkout" class="sr-only">Checkout</label>
        <input class="form-control" type="date" id="checkout" name="date_check_out" value="<%= Date.today + 7 %>">
      </div>
      <button type="submit" class="btn btn-default">A l'abordage !</button>
    </form>

  </div>
</div>
